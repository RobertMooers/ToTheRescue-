@using ToTheRescueWebApplication.Code
@model List<Animal>
@{
    ViewBag.Title = "Sanctuary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Your Sanctuary!</h2>

<div id="animalSanctuary">
    @for (int i = 0; i < Model.Count(); i++)
    {
        if (Model[i].ActiveBit == true)
        {
        <div id="@("Div" + i)">
        <img id="@("AnimalImage" + i)" height="70" width="70" src="@Url.Action("ShowAnimalImage", new { @animalID = Model[i].ID })" alt="Animal" onclick="AnimalClicked(@i)"/>
        <audio id="@i" src="@Url.Action("PlayAnimalSound", new { @animalID = Model[i].ID })" />
        </div> 
        }
    }
</div>

<script type="text/javascript">

    function GoToMainMenu()
    {
        window.location.href = '/MainMenu/MainMenu';
    }

    function AnimalClicked(id)
    {
        document.getElementById(id).play();
        //var funFactLocation = document.getElementById("FunFact");
    }
</script>