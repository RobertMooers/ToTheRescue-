@model ToTheRescueWebApplication.Models.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewBag.Title = "Reset password";
}

<h2>@ViewBag.Title</h2>

<section class="form">
     @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
     { 
         @Html.AntiForgeryToken()  
         @Html.ValidationSummary("", new { @class = "text-danger" })  
         @Html.HiddenFor(model => model.Code)  
        <div class="form-group">
        <div class="loginFields">
        <label>Email Address</label>@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
        </div>
        <br />
        <div class="form-group">
        <div class="col-md-offset-2 col-md-10" id="resetPWButton">
            <input type="submit" class="btn btn-default" value="Reset" />
        </div>
        </div>
        </div>
}
</section>
