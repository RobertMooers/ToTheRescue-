<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/CSS/EndOfGame.css" rel="stylesheet" type="text/css" />
    <title>EndofGame</title>
</head>
<body>
    @* web audio api that allows mobile audio *@
    <script type="text/javascript" src="~/scripts/WebAudioApi.js"></script>
    <div> 
        <img id="endOfGameGif" src="../../Images/endOfGame.gif"/>
        <button id="mainMenu" onclick="GoToMainMenu()">Main Menu</button>
    </div>
    <script>
        var button = document.getElementById("mainMenu");
        setTimeout(showButton, 5000);
        setTimeout(playAudio, 3000);
        //wait 5 seconds until the animation is done to reveal the back button
        function GoToMainMenu() {
            window.location.href = '/MainMenu/MainMenu';
        }
        function showButton() {
            button.style.visibility = "visible";
        }
        function playAudio() {
            var youWon = new WebAudioAPISound('../../Audio/youWon.m4a');
            youWon.setVolume(20);
            youWon.play(youWon);
        }
    </script>
</body>
</html>
